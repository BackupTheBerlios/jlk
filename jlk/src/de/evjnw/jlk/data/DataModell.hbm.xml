<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.evjnw.jlk.data">
  <class name="DataModell">
    <id name="id">
      <generator class="native"/>
    </id>
    <version name="version" />
	<property name="hinzugefuegtAm" type="date"/>
	<property name="hinzugefuegtDurch" />
	<property name="geaendertAm" type="date"/>
	
	<union-subclass name="de.evjnw.jlk.data.Benutzer" table="Benutzer">
		<property name="Vorname"/>
		<property name="Nachname"></property>
		<property name="Passwort"></property>
		<property name="LastLogin"></property>
		
		<bag name="Favoriten">
			<key column="person" />
			<one-to-many class="de.evjnw.jlk.data.Favoriten"/>
		</bag>
		<bag name="Suche" table="Benutzer_Suche">
			<key column="benutzer_id" />
			<many-to-many column="Suche" class="de.evjnw.jlk.data.Suche" />
		</bag>		
	</union-subclass>
	<union-subclass name="de.evjnw.jlk.data.Favoriten" table="Favoriten">
		<property name="Bewertung"></property>
		<property name="Kommentar"></property>
<!--
  TODO: Lied ist noch nicht gemappt
 		<many-to-one name="Lied" class="de.evjnw.jlk.data.Lied" />
 -->
	</union-subclass>


  </class>
</hibernate-mapping>